
@{
    ViewBag.Title = "DisplayConsultation";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<h2>Further informations on consultation</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Additionnal informations</th>
            <th scope="col">ID</th>
            <th scope="col">Price</th>
            <th scope="col">Rating</th>
            <th scope="col">Remarks</th>
            
        </tr>
    </thead>
    @foreach (var x in ViewBag.result)

    {

        if (@x.remarks == null)
        {

            <tr class="table-bordered">
                <td></td>
                <td>@x.id</td>
                <td>@x.price</td>
                <td>@x.rating</td>
              
                <td>No remarks for this consultation</td>
              
                
                
               
             </tr>
        }
        else
        {
    <tr class="table-bordered">
        <td></td>
        <td>@x.id</td>
        <td>@x.price</td>
        <td>@x.rating</td>
        <td>@x.remarks</td>
        

    </tr>}



    }

    </table>

        <style>
            h2 {
                text-align: center;
            }
            table{
                margin-top:100px;
            }
        </style>
