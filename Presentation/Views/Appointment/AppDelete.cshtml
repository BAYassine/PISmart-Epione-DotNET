
@{
    ViewBag.Title = "AppDelete";
}

<h2 style="text-align:center">All appointments with deleting option</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Appointments</th>
            <th scope="col">Message</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th scope="col">Delete</th>


        </tr>
    </thead>
    @foreach (var x in ViewBag.result)

    {


        <tr class="table-bordered">
            <td></td>
            <td>@x.message</td>
            <td>@x.date_start</td>
            <td>@x.date_end</td>
            <td><a href="@Url.Action("Delete","Appointment",new { id = x.id })" class="btn  btn-raised btn-danger waves-effect">Delete</a></td>



        </tr>}





</table>



